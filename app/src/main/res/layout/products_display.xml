<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="2dp"
        card_view:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp"
        app:cardUseCompatPadding="true">

        <!--android:layout_gravity="center"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/producttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="10dp"
                android:layout_toRightOf="@+id/productimage"
                 />


            <TextView
                android:id="@+id/productdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_toRightOf="@+id/productprice"
                android:layout_below="@+id/productdetails"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignParentRight="true"/>


            <TextView
                android:id="@+id/productlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:padding="10dp"
                android:layout_toRightOf="@+id/productimage"
                android:layout_below="@+id/productdetails"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />


            <TextView
                android:id="@+id/productdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_toRightOf="@+id/productimage"
                android:layout_below="@+id/producttext"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/productsellername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="10dp"
                android:layout_toRightOf="@+id/productdetails"
                android:layout_below="@+id/producttext"
                android:textAppearance="?android:attr/textAppearanceSmall" />



            <TextView
                android:id="@+id/productsellerno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_toRightOf="@+id/productsellername"
                android:layout_below="@+id/producttext"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Price"
                android:padding="10dp"
                android:layout_below="@+id/productlocation"
                android:layout_toRightOf="@+id/productlocation" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                card_view:srcCompat="@mipmap/defaultplaceholder"
                android:layout_alignParentLeft="true"
                android:cropToPadding="false"
                android:id="@+id/productimage"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                 />

            <TextView
                android:id="@+id/productpricetag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ksh."
                android:padding="10dp"
                android:layout_below="@+id/productlocation"
                android:layout_toRightOf="@+id/productimage"/>
            <!--android:layout_marginTop="16dp"-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>





























